<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Painel Administrativo - Denúncia Urbana</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Denúncias Pendentes</h1>
    
    <% if (pendingDenuncias.length === 0) { %>
      <p class="text-center">Nenhuma denúncia pendente.</p>
    <% } else { %>
      <div class="row">
        <% pendingDenuncias.forEach(denuncia => { %>
          <div class="col-sm-12 col-md-6 col-lg-4 mb-3">
            <div class="card">
              <% if (denuncia.imagem) { %>
                <img src="/uploads/<%= denuncia.imagem %>" class="card-img-top" alt="Imagem da denúncia">
              <% } %>
              <div class="card-body">
                <p class="card-text"><%= denuncia.descricao %></p>
                <div class="d-flex justify-content-between">
                  <form action="/denuncia/<%= denuncia._id %>/aprovar" method="POST">
                    <button type="submit" class="btn btn-success btn-sm">Aprovar</button>
                  </form>
                  <form action="/denuncia/<%= denuncia._id %>/delete" method="POST" onsubmit="return confirm('Tem certeza que deseja deletar esta denúncia?');">
                    <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

      <div class="d-flex justify-content-center mb-4">
        <a href="/" class="btn btn-secondary">Página Inicial</a>
      </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

